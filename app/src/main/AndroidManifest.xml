<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AutoSPA"
        tools:targetApi="31">
        <activity
            android:name=".HelpActivity"
            android:exported="false" />
        <activity
            android:name=".AppManualActivity"
            android:exported="false" />
        <activity
            android:name=".SwipeCardActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WashPackageActivity"
            android:exported="true" />
        <activity
            android:name=".QRCodeActivity"
            android:exported="true" />
        <activity
            android:name=".PaymentSuccessActivity"
            android:exported="true" />
        <activity
            android:name=".PaymentProcessingActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".OptionalAddOnsActivity"
            android:exported="true" />
        <activity
            android:name=".PaymentOptionsActivity"
            android:exported="true" />
        <activity
            android:name=".InsertCardActivity"
            android:exported="true" />
        <activity
            android:name=".TapCardActivity"
            android:exported="false" />
        <activity
            android:name=".ReceiptOptionsActivity"
            android:exported="true" />
        <activity
            android:name=".QRCodeReceiptActivity"
            android:exported="true" />
        <activity
            android:name=".EmailReceiptActivity"
            android:exported="true" />
        <activity
            android:name=".SMSReceiptActivity"
            android:exported="true" />
        <activity
            android:name=".ReceiptSentActivity"
            android:exported="true" />
        <activity
            android:name=".Instructions"
            android:exported="true" />
    </application>

</manifest>