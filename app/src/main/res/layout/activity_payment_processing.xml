<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentProcessingActivity">

    <!--Background-->
    <include
        layout="@layout/background_2"/>


    <!--Displayed Text-->

    <!--Navigation Bar-->

    <ImageView
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="8dp"
        android:rotation="45"
        android:scaleX="-1"
        android:src="@drawable/the_car"
        app:layout_constraintBottom_toTopOf="@+id/bubble_line"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/bubble_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:src="@drawable/bubble_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_title_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="350dp"
        android:fontFamily="@font/opensans_bold"
        android:text="Please Wait \nPayment Processing"
        android:textAlignment="center"
        android:textColor="@color/primaryPurple"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <include
        layout="@layout/navigation_bar"/>

</androidx.constraintlayout.widget.ConstraintLayout>