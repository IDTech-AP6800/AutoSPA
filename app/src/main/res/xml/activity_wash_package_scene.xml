<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <!--//xmlns:motion="http://schemas.android.com/tools"-->

    <Transition
        motion:constraintSetEnd="@+id/next"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        android:id="@+id/forward">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left"/>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/previous"
        motion:constraintSetStart="@id/start"
        android:id="@+id/backward">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right"/>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/next_plat"
        motion:constraintSetStart="@id/next"
        motion:duration="1000"
        android:id="@+id/forward_plat">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left"/>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/next"
        motion:constraintSetStart="@id/next_plat"
        motion:duration="1000"
        android:id="@+id/backward_plat">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right"/>
    </Transition>

    <ConstraintSet android:id = "@+id/previous">

        <Constraint
            android:id="@id/silver_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@id/bronze_tier"
            motion:layout_constraintTop_toTopOf="parent"
            />

        <Constraint
            android:id="@id/bronze_tier"
            android:layout_width="288dp"
            android:layout_height="360dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            />
        <Constraint
            android:id="@+id/gold_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@id/silver_tier"
            motion:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/plat_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@id/gold_tier"
            motion:layout_constraintTop_toTopOf="parent"/>

    </ConstraintSet>

    <ConstraintSet android:id = "@id/start">
        <Constraint
            android:id="@id/silver_tier"
            android:layout_width="288dp"
            android:layout_height="360dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@id/bronze_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/silver_tier"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/gold_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@id/silver_tier"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/plat_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@id/gold_tier"
            motion:layout_constraintTop_toTopOf="parent"/>

    </ConstraintSet>

    <ConstraintSet android:id = "@id/next">
        <Constraint
            android:id="@id/bronze_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/silver_tier"
            motion:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@id/silver_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/gold_tier"
            motion:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/gold_tier"
            android:layout_width="288dp"
            android:layout_height="360dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/plat_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@id/gold_tier"
            motion:layout_constraintTop_toTopOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/next_plat">
        <Constraint
            android:id="@id/bronze_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/silver_tier"
            motion:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@id/silver_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/gold_tier"
            motion:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/gold_tier"
            android:layout_width="256dp"
            android:layout_height="320dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/plat_tier"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/plat_tier"
            android:layout_width="288dp"
            android:layout_height="360dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>



</MotionScene>
